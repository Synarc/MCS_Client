<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
 android:layout_width="match_parent"
    android:weightSum="500"
    tools:context=".NewActivity"  android:layout_height="match_parent">


    <RelativeLayout
        android:layout_margin="2dp"
        android:padding="2dp"
        android:background="@drawable/background_map"
        android:layout_weight="50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment

            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <Button
            android:background="@drawable/custom_button"
            android:text="Choose Place"
            android:id="@+id/confirmPLace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp" />
        <!--<TextView-->
        <!--android:id="@+id/price"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginStart="88dp"-->
        <!--android:layout_marginTop="140dp"-->
        <!--android:text="K0.00"-->
        <!--android:textColor="@color/colorAccent"-->
        <!--android:textSize="20dp" />-->



        <ImageView
            android:src="@drawable/lolly"
            android:layout_centerInParent="true"
            android:id="@+id/centerMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </RelativeLayout>


    <TextView
        android:layout_weight="112"
        android:textSize="15sp"
        android:id="@+id/oriName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/desName"
        android:gravity="center"

        android:layout_marginBottom="5dp"
        android:hint="Origin" />
    <TextView
        android:layout_weight="112"

        android:textSize="15sp"
        android:gravity="center"
        android:id="@+id/desName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/calulateTrip"
        android:layout_marginBottom="5dp"
        android:hint="Destination" />


    <Button
        android:layout_weight="115"

        android:background="@drawable/custom_button"
        android:text="Calculate Trip Fare"
        android:id="@+id/calulateTrip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp" />
    <Button
        android:layout_weight="115"

        android:background="@drawable/custom_button"
        android:text="Back"
        android:id="@+id/backNew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp" />



</LinearLayout>

