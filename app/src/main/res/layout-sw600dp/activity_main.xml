<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:textSize="15sp"
        android:id="@+id/signedInAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="15sp"

        android:textStyle="bold|italic"
        android:id="@+id/loggout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button

        android:id="@+id/newTrip"
        android:layout_width="152dp"
        android:layout_height="141dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/custom_button"
        android:text="New \n Trips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/requestedTrip"

        android:layout_width="145dp"
        android:layout_height="146dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/custom_button"
        android:text="Requested Trps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newTrip"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pendingTrips"
        android:layout_width="152dp"
        android:layout_height="150dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/custom_button"
        android:text="Pending Trips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newTrip" />

    <Button
        android:id="@+id/completedTrips"

        android:layout_width="149dp"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/custom_button"
        android:text="Completed Trips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toEndOf="@+id/pendingTrips"
        app:layout_constraintTop_toBottomOf="@+id/requestedTrip" />

    <com.hitomi.cmlibrary.CircleMenu
        android:id="@+id/circle_menu"
        android:layout_width="300dp"
        android:layout_height="208dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>